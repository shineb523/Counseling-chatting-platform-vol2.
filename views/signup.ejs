                                // 아이디 필요조건을 모두 만족했을 때, 필요조건 메시지를 초록색 "OK"로 출력
                                console.log('아이디 중복 체크 : 중복되는 아이디가 존재하지 않음. 생성 가능한 아이디.');
                                $('#signup_user_id').attr('class', 'form-control is-valid');
                                $("#signup_id_required").attr('class', 'valid-feedback');
                                $("#signup_id_required").text("OK");

                                overlap_check = false;
                            }

                        },
                        error: function(data) {
                            console.log('jsonRPC error 응답 받음.');
                            console.log(data.error.code + ', ' + data.error.message);
                            window.location.href = '../views/error';
                        }
                    });


                } else {
                    // 아이디 알파벳 존재 검사 정규표현식 만족 여부에 따라, 아이디 검사 배열의 알파벳 해당 값 변경
                    if (id_alphabet_pattern.test(signup_user_id.val()) == false) {
                        // 불만족 시 "알파벳"
                        signup_id_required_arr[0] = "알파벳";
                    } else {
                        // 만족 시 "ok"
                        signup_id_required_arr[0] = "ok";
                    }
                    // 아이디 숫자 존재 검사 정규표현식 만족 여부에 따라, 아이디 검사 배열의 숫자 해당 값 변경
                    if (id_digit_pattern.test(signup_user_id.val()) == false) {
                        // 불만족 시 "숫자"
                        signup_id_required_arr[1] = "숫자";
                    } else {
                        // 만족 시 "ok"
                        signup_id_required_arr[1] = "ok";
                    }
                    // 아이디 길이 검사 정규표현식 만족 여부에 따라, 아이디 검사 배열의 길이 해당 값 변경
                    if (id_length_pattern.test(signup_user_id.val()) == false) {
                        // 불만족 시 "5~15자"
                        signup_id_required_arr[2] = "5~15자";
                    } else {
                        // 만족 시 "ok"
                        signup_id_required_arr[2] = "ok";
                    }

