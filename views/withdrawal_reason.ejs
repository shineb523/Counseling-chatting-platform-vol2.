    <script>
        (jQuery)(function($) {

            console.log($("#withdrawal_reason_selected option:selected").val());

            $('#withdrawal_reason_form').submit(function() {
                if ($("#withdrawal_reason_selected option:selected").val() == 'a') {
                    alert('Please select reasons for withdrawal from membership.');
                    $('#withdrawal_reason_selected').focus();
                    return false;
                } else if ($('#withdrawal_reason_text').val().length < 10) {
                    // 경고창 출력 후,
                    alert("Please enter 10 or more reasons for withdrawal from membership.");
                    // 탈퇴 사유 텍스트 입력 input에 포커스를 주고,
                    $('#withdrawal_reason_text').focus();
                    // submit(제출)을 취소한다.
                    return false;
                }
            });

        });
