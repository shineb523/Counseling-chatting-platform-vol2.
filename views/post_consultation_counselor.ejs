<body>

    <div id="title">Counselor registration</div>
    <form  id="post_counselor_form" method="post" action="/post_consultation_counselor" >
        <div class="form-group">
            <label for="post_counselor_title">Title</label>
            <input type="text" id="post_counselor_title" class="form-control" name="post_counselor_title" >
        </div>
        <div class="form-group">
            <label for="post_counselor_type_write">Consultation type</label>
            <input type="text" id="post_counselor_type_write" class="form-control" name="post_counselor_type_write" placeholder="Love, study, career, depression, etc.">
        </div>
        <div class="form-group">
            <label for="post_counselor_contents">Registration contents</label>
            <textarea id="post_counselor_contents" class="form-control" name="post_counselor_contents" rows="10" placeholder="Self introduction, career, education, qualification, professional counseling field, counseling price, SNS account ID to consult, etc."></textarea>
        </div>
        <button id="post_counselor_button" class="btn btn-outline-secondary" type="submit">Post</button>
        <a href="/" id="home_link">Home</a>
    </form>
