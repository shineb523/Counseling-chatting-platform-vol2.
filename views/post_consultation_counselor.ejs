    <script>
        (jQuery)(function($) {
            var post_counselor_record_tmp = <%= post_counselor_record_rendering %>
            var post_counselor_title_tmp = <%= post_counselor_title_rendering %>
            var post_counselor_type_write_tmp = <%= post_counselor_type_write_rendering %>
            var post_counselor_contents_tmp = <%= post_counselor_contents_rendering %>
            console.log('post_counselor_record : ', post_counselor_record_tmp);
            console.log('post_counselor_title_tmp : ', post_counselor_title_tmp);
            console.log('post_counselor_type_write_tmp : ', post_counselor_type_write_tmp);
            console.log('post_counselor_contents_tmp : ', post_counselor_contents_tmp);

            if(post_counselor_record_tmp){
                $('#post_counselor_title').val('post_counselor_title_tmp');
                $('#post_counselor_type_write').val('post_counselor_type_write_tmp');
                $('#post_counselor_contents').val('post_counselor_contents_tmp');
            }

            $('#post_counselor_form').submit(function() {
                if($('#post_counselor_title').val().length < 10){
                    // 경고창 출력 후,
                    alert("Please enter a title of at least 10 characters.");
                    // 탈퇴 사유 텍스트 입력 input에 포커스를 주고,
                    $('#post_counselor_title').focus();
                    // submit(제출)을 취소한다.
                    return false;
                }else if($('#post_counselor_type_write').val().length < 10){
                    // 경고창 출력 후,
                    alert("Please enter a consultation type of at least 10 characters.");
                    // 탈퇴 사유 텍스트 입력 input에 포커스를 주고,
                    $('#post_counselor_type_write').focus();
                    // submit(제출)을 취소한다.
                    return false;
                }else if($('#post_counselor_contents').val().length < 50){
                    // 경고창 출력 후,
                    alert("Please enter a registration contents of at least 50 characters.");
                    // 탈퇴 사유 텍스트 입력 input에 포커스를 주고,
                    $('#post_counselor_contents').focus();
                    // submit(제출)을 취소한다.
                    return false;
                }
            });
