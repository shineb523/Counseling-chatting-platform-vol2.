            <label for="post_consultation_registrant_type">Registrant type</label>
            <select id="post_consultation_registrant_type" class="form-control" name="post_consultation_registrant_type">
                <option value="a" selected="selected">Counselor</option>
                <option value="b">Client</option>
            </select>
        </div>
        <div class="form-group">
            <label for="post_consultation_type_write">Counseling type</label>
            <input type="text" id="post_consultation_type_write" class="form-control" name="post_consultation_type_write">
        </div>
        <div class="form-group">
            <label for="post_consultation_contents">Registration contents</label>
            <textarea id="post_consultation_contents" class="form-control" name="post_consultation_contents" rows="10"></textarea>
        </div>
        <button id="post_consultation_button" class="btn btn-outline-secondary" type="submit">Post</button>
    </form>
