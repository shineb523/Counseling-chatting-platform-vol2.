    <div id="title">Post consultation</div>
    <form action="/post_consultation" id="post_consultation_form">
        <div class="form-group">
            <label for="post_consultation_title">Title</label>
            <input type="text" id="post_consultation_title" class="form-control" name="post_consultation_title">
        </div>
